<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.wyp.chalkitup.fragments.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Statistics"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textStyle="bold"
        android:layout_marginTop="330dp"
        android:layout_centerHorizontal="true"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/projects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Created Projects: ##"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_marginTop="375dp"
        android:layout_centerHorizontal="true"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/interested"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interested Projects: ##"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_marginTop="400dp"
        android:layout_centerHorizontal="true"
        android:textSize="21sp" />

    <ImageView
        android:id="@+id/ulogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/interested"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView"
        android:layout_width="306dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:src="@android:drawable/sym_def_app_icon"
        android:layout_height="200dp"
        android:layout_marginTop="27dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:text="Mr. Android Studio"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="36sp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="android.studio@android.com"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="26sp"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
